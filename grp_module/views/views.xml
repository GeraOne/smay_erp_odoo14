<odoo>
    <data>
        <record model="ir.ui.view" id="view_partner_form_grp">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='vat']" position="after">
                    <field name="genre" readonly="True"/>
                    <!--<button name="change_genre"
                            string="CAMBIAR GENERO"
                            type="object"
                            class="oe_highlight"/>-->
                </xpath>

                <!--<xpath expr="//sheet" position="after">-->
                <xpath expr="/form/sheet" position="before">
                    <header>
                        <button name="change_genre"
                                string="CAMBIAR GENERO"
                                type="object"
                                class="oe_highlight"/>
                    </header>
                </xpath>
            </field>

        </record>
    </data>
</odoo>
