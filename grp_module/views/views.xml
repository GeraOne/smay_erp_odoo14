<odoo>
    <data>
        <record model="ir.ui.view" id="view_partner_form_grp">
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='vat']" position="after">
                    <field name="genre" readonly="True"/>
                </xpath>

                <xpath expr="/form/sheet" position="before">
                    <header>
                        <button name="change_genre"
                                string="CAMBIAR GENERO"
                                type="object"
                                class="oe_highlight"/>
                    </header>
                </xpath>
            </field>


        </record>
        <record id="view_report_contacts_pivot" model="ir.ui.view">
            <field name="name">contacs</field>
            <field name="model">data.genre.report</field>
            <field name="arch" type="xml">
                <pivot string="Reporte de Contactos">
                    <field name="genre" type="row"/>
                    <field name="total" type="measure"/>
                    <field name="percent" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_report_contacts" model="ir.actions.act_window">
            <field name="name">Reporte de Contactos</field>
            <field name="res_model">data.genre.report</field>
            <field name="view_mode">pivot</field>
        </record>

        <menuitem id="menu_report_contacts" name="Reportes"
                  parent="contacts.menu_contacts"
                  groups="base.group_system" sequence="5"/>

        <menuitem id="menu_report_contacts_report" name="Contactos"
                  parent="menu_report_contacts"
                  action="action_report_contacts"
                  groups="base.group_system" sequence="1"/>

    </data>
</odoo>
